/*==============================
	Header
==============================*/
.header
	position fixed
	top 0
	left 0
	width 100%
	z-index 99
	transition(.3s)
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 88px
		position relative
		&:before
			content ''
			position absolute
			display block
			top 100%
			left 50%
			width 100%
			max-width 330px
			height 2px
			background-color $white
			opacity .5
			transform(translateX(-50%))
	&__logo
		position relative
		height 50px
		display block
		cursor pointer
		object
			width 122px
			transition(.3s)
			&:last-child
				position absolute
				top 0
				left 0
				opacity 0
	&__nav
		position fixed
		top 0
		bottom 0
		width 280px
		background-color $white
		right 0
		transform(translate3d(280px, 0, 0))
		transition(.3s)
		display flex
		flex-direction column
		justify-content center
		align-items center
		z-index 1
		&--active
			transform(translate3d(0, 0, 0))
		a
			font-size 16px
			font-weight 600
			color $title-clr
			margin-bottom 20px
			&:last-child
				margin-bottom 0
	&__social
		display flex
		flex-direction row
		justify-content center
		align-items center
		a
			margin 0 5px
			font-size 18px
	&__btn
		width 130px
		height 40px
		line-height 40px
		color $white
		font-size 14px
		font-weight 500
		border-radius(3px)
		text-align center
		background-image -moz-linear-gradient( 90deg, rgb(31,141,198) 0%, rgb(46,129,160) 48%, rgb(60,116,122) 100%)
		background-image -webkit-linear-gradient( 90deg, rgb(31,141,198) 0%, rgb(46,129,160) 48%, rgb(60,116,122) 100%)
		background-image -ms-linear-gradient( 90deg, rgb(31,141,198) 0%, rgb(46,129,160) 48%, rgb(60,116,122) 100%)
		background-image linear-gradient( 90deg, rgb(31,141,198) 0%, rgb(46,129,160) 48%, rgb(60,116,122) 100%)
		margin-right 60px
		&:hover
			color $white
	&__menu
		position absolute
		width 29px
		height 18px
		display block
		right 0
		top 50%
		transform(translateY(-50%))
		cursor pointer
		z-index 2
		span
			display block
			position absolute
			width 100%
			height 2px
			left 0
			background-color $white
			transition(.3s)
			opacity 1
			&:first-child
				top 0
			&:nth-child(2)
				top 50%
				margin-top -1px
			&:last-child
				top 100%
				margin-top -2px
		&--active
			span
				background-color $title-clr
				&:nth-child(2)
					opacity 0
				&:first-child
					transform(rotate(-45deg))
					top 50%
					margin-top -2px
				&:last-child
					transform(rotate(45deg))
					top 50%
	&--active
	&--white
		background-color $white
		box-shadow(0 2px 6px 0 rgba(0, 0, 0, 0.08))
		.header__menu
			span
				background-color $title-clr
